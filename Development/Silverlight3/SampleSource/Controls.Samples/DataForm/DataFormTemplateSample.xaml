            </StackPanel>
            <dataform:DataForm x:Name="dataForm" ItemsSource="{Binding}" HorizontalAlignment="Stretch" Width="400" Margin="4" Grid.Column="1">
                <dataform:DataForm.EditTemplate>
                    <DataTemplate>
                        <samples:ContactEditor DataContext="{Binding}" />
                    </DataTemplate>
                </dataform:DataForm.EditTemplate>
            </dataform:DataForm>
        </Grid>
