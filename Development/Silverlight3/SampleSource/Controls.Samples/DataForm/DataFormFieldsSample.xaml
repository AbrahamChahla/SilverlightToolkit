<UserControl x:Class="System.Windows.Controls.Samples.DataFormFieldsSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dataform="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.DataForm"
    xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <StackPanel>
        <ContentControl Content="DataForm with Custom Fields" Style="{StaticResource Header}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <CheckBox Content="AutoCommit" IsChecked="{Binding AutoCommit, ElementName=dataForm, Mode=TwoWay}" Margin="4" />
                <CheckBox Content="AutoEdit" IsChecked="{Binding AutoEdit, ElementName=dataForm, Mode=TwoWay}" Margin="4" />
                <CheckBox Content="CanUserAddItems" IsChecked="{Binding CanUserAddItems, ElementName=dataForm, Mode=TwoWay}" Margin="4" />
                <CheckBox Content="CanUserDeleteItems" IsChecked="{Binding CanUserDeleteItems, ElementName=dataForm, Mode=TwoWay}" Margin="4" />
                <CheckBox Content="CommandButtonsVisibility" IsChecked="{Binding AutoEdit, ElementName=dataForm, Mode=TwoWay}" Margin="4" />
                <TextBlock Style="{StaticResource ApiName}" Text="FieldLabelPosition" Margin="4" />
                <ComboBox SelectedItem="{Binding FieldLabelPosition, ElementName=dataForm, Mode=TwoWay}" SelectedIndex="0" Margin="4">
                    <sys:String>Auto</sys:String>
                    <sys:String>Left</sys:String>
                    <sys:String>Top</sys:String>
                </ComboBox>
                <CheckBox Content="IsReadOnly" IsChecked="{Binding IsReadOnly, ElementName=dataForm, Mode=TwoWay}" Margin="4" />
                <TextBlock Style="{StaticResource ApiName}" Text="Orientation" Margin="4" />
                <ComboBox SelectedItem="{Binding Orientation, ElementName=dataForm, Mode=TwoWay}" SelectedIndex="0" Margin="4">
                    <sys:String>Vertical</sys:String>
                    <sys:String>Horizontal</sys:String>
                </ComboBox>
                <TextBlock Style="{StaticResource ApiName}" Text="WrapAfter" Margin="4" />
                <input:NumericUpDown VerticalAlignment="Center" Minimum="0" Margin="4" Value="{Binding WrapAfter, ElementName=dataForm, Mode=TwoWay}" />
            </StackPanel>
            <dataform:DataForm x:Name="dataForm" ItemsSource="{Binding}" HorizontalAlignment="Stretch" Width="400" Margin="4" Grid.Column="1" AutoGenerateFields="False">
                <dataform:DataForm.Fields>
                    <dataform:DataFormFieldGroup Orientation="Horizontal" >
                        <dataform:DataFormTextField Binding="{Binding FirstName}" FieldLabelPosition="Top" />
                        <dataform:DataFormTextField Binding="{Binding LastName}" FieldLabelPosition="Top" />
                    </dataform:DataFormFieldGroup>
                    <dataform:DataFormSeparator StrokeThickness="1" Stroke="Black" />
                    <dataform:DataFormFieldGroup>
                        <dataform:DataFormTextField Binding="{Binding Street1}" />
                        <dataform:DataFormTextField Binding="{Binding Street2}" />
                        <dataform:DataFormTextField Binding="{Binding City}" />
                        <dataform:DataFormTextField Binding="{Binding State}" />
                        <dataform:DataFormTextField Binding="{Binding Zip}" />
                        <dataform:DataFormCheckBoxField Binding="{Binding IsBusinessAddress}" />
                    </dataform:DataFormFieldGroup>
                    <dataform:DataFormSeparator StrokeThickness="1" Stroke="Black" />
                    <dataform:DataFormFieldGroup>
                        <dataform:DataFormTextField Binding="{Binding Phone}" />
                        <dataform:DataFormTextField Binding="{Binding Email}" />
                    </dataform:DataFormFieldGroup>
                </dataform:DataForm.Fields>
            </dataform:DataForm>
        </Grid>
