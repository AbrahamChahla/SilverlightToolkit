<UserControl x:Class="System.Windows.Controls.Samples.DataGridMasterDetailSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:datagrid="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
    xmlns:dataform="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.DataForm"
    xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
    xmlns:desc="clr-namespace:System.Windows.Data;assembly=System.ComponentModel">
    <StackPanel>
        <ContentControl Content="DataGrid, DataForm, and DataPager provide a Master-Details UI" Style="{StaticResource Header}" />
        <Grid Height="400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="600" />
                <ColumnDefinition MinWidth="250" />
            </Grid.ColumnDefinitions>
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <datagrid:DataGrid ItemsSource="{Binding}">
                    <datagrid:DataGrid.GroupDescriptions>
                        <desc:PropertyGroupDescription PropertyName="State" />
                        <desc:PropertyGroupDescription PropertyName="City" />
                    </datagrid:DataGrid.GroupDescriptions>
                </datagrid:DataGrid>
                <dataform:DataPager Grid.Row="1" Source="{Binding}" PageSize="10" />
            </Grid>
            <dataform:DataForm Margin="4" Grid.Column="1" ItemsSource="{Binding}" AutoGenerateFields="False">
                <dataform:DataForm.Fields>
                    <dataform:DataFormFieldGroup Orientation="Horizontal" >
                        <dataform:DataFormTextField Binding="{Binding FirstName}" FieldLabelPosition="Top" />
                        <dataform:DataFormTextField Binding="{Binding LastName}" FieldLabelPosition="Top" />
                    </dataform:DataFormFieldGroup>
                    <dataform:DataFormSeparator StrokeThickness="1" Stroke="Black" />
                    <dataform:DataFormFieldGroup>
                        <dataform:DataFormTextField Binding="{Binding Street1}" />
                        <dataform:DataFormTextField Binding="{Binding Street2}" />
                        <dataform:DataFormTextField Binding="{Binding City}" />
                        <dataform:DataFormTextField Binding="{Binding State}" />
                        <dataform:DataFormTextField Binding="{Binding Zip}" />
                        <dataform:DataFormCheckBoxField Binding="{Binding IsBusinessAddress}" />
                    </dataform:DataFormFieldGroup>
                    <dataform:DataFormSeparator StrokeThickness="1" Stroke="Black" />
                    <dataform:DataFormFieldGroup>
                        <dataform:DataFormTextField Binding="{Binding Phone}" />
                        <dataform:DataFormTextField Binding="{Binding Email}" />
                    </dataform:DataFormFieldGroup>
                </dataform:DataForm.Fields>
            </dataform:DataForm>
        </Grid>
