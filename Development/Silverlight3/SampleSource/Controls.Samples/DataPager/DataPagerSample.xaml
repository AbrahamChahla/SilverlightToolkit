                <TextBlock Style="{StaticResource ApiDescription}" Text="Numeric" />
                <dataform:DataPager x:Name="pagerN" Margin="0,0,0,4" HorizontalAlignment="Center" Source="{Binding}" NumericButtonCount="{Binding Value, ElementName=numericButtonCount}" AutoEllipsis="{Binding IsChecked, ElementName=autoEllipsis}" />
                <TextBlock Style="{StaticResource ApiDescription}" Text="PreviousNext" />
                <dataform:DataPager x:Name="pagerPn" Margin="0,0,0,4" HorizontalAlignment="Center" Source="{Binding}" NumericButtonCount="{Binding Value, ElementName=numericButtonCount}" AutoEllipsis="{Binding IsChecked, ElementName=autoEllipsis}" />
                <TextBlock Style="{StaticResource ApiDescription}" Text="PreviousNextNumeric" />
                <dataform:DataPager x:Name="pagerPnn" Margin="0,0,0,4" HorizontalAlignment="Center" Source="{Binding}" NumericButtonCount="{Binding Value, ElementName=numericButtonCount}" AutoEllipsis="{Binding IsChecked, ElementName=autoEllipsis}" />
                <CheckBox x:Name="autoEllipsis" Content="AutoEllipsis" Margin="4" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="NumericButtonCount:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="4" />
                    <input:NumericUpDown x:Name="numericButtonCount" VerticalAlignment="Center" Value="5" Minimum="3" Maximum="15" Grid.Row="0" Grid.Column="1" Margin="4" />
                </Grid>
            </StackPanel>

