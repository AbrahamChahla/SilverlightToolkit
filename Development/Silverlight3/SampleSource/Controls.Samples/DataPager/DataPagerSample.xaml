                <dataform:DataPager x:Name="pagerFlpn" Margin="0,0,0,4" HorizontalAlignment="Center" Source="{Binding}" NumericButtonCount="{Binding Value, ElementName=numericButtonCount}" AutoEllipsis="{Binding IsChecked, ElementName=autoEllipsis}" />
                <TextBlock Style="{StaticResource ApiDescription}" Text="FirstLastPreviousNextNumeric" />
